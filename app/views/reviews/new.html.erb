<div class="container mt-3">
  <h1>Leave a Review for <%= @restaurant.name %></h1>
  <%= simple_form_for ([@restaurant, @review]) do |f| %>
    <div class="form-inputs">
      <%= f.input :content %>
      <%= f.input :rating %>
    </div>

    <div class="form-actions btn btn-primary">
      <%= f.button :submit, class:"text-white" %>
    </div>
  <% end %>
</div>
